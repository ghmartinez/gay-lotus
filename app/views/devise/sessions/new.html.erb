<div class="container mt-3">

  <h2 class="fancy-font hot-title mb-3">Inicia Sessió</h2>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs mt-3">
      <%= f.input :email,
                  label: "Email",
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" } %>
      <%= f.input :password,
                  label: "Contrasenya",
                  required: false,
                  input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me,
                  label: "Recorda'm",
                  as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions btn btn-ghost">
      <%= f.button :submit, "Inicia Sessió" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
