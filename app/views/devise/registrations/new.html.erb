<div class="container mt-3">

<h2>Registra't</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email,
                label: "Email",
                required: true,
                input_html: { autocomplete: "email", placeholder: "lady@gaga.com" }%>
    <%= f.input :password,
                label: "Contrasenya",
                required: true,
                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                input_html: { autocomplete: "new-password", placeholder: "Gangbang69!" } %>
    <%= f.input :password_confirmation,
                label: "Confirma la contrasenya",
                required: true,
                input_html: { autocomplete: "new-password", placeholder: "Gangbang69!" } %>
    <%= f.input :first_name,
                label: "Nom",
                placeholder: "Lady",
                required: true %>
    <%= f.input :last_name,
                label: "Cognoms",
                placeholder: "Gaga",
                required: true %>
    <%= f.input :telegram_user,
                label: "Usuari de Telegram",
                placeholder: "@ladygaga69" %>
    <%= f.input :photo,
                label: "Foto de perfil",
                as: :file %>
  </div>

  <div class="form-actions btn btn-ghost">
    <%= f.button :submit, "Registra't" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>

</div>
