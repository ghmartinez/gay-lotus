<div class = "mt-3">
  <%- if controller_name != 'sessions' %>
    <%= link_to "Inicia sessió", new_session_path(resource_name) %><br />
  <% end %>
</div>

<div class = "mt-3">
  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Registra't", new_registration_path(resource_name) %><br />
  <% end %>
</div>

<div class = "mt-3">
  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "T'has oblidat de la teva contrasenya?", new_password_path(resource_name) %><br />
  <% end %>
</div>

<div class = "mt-3">
  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "No heu rebut instruccions de confirmació?", new_confirmation_path(resource_name) %><br />
  <% end %>
</div>

<div class = "mt-3">
  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "No has rebut instruccions de desbloqueig?", new_unlock_path(resource_name) %><br />
  <% end %>
</div>

<div class = "mt-3">
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "Inicia sessió amb #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false } %><br />
    <% end %>
  <% end %>
</div>
